<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FolkChat" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:statusBarColor">@color/mediumPurple</item>
        <item name="colorPrimary">@color/mediumPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.FolkChat.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mediumPurple</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/mediumPurple</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>